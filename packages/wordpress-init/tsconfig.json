{
  "exclude": ["__tests__", "templates"],
  "include": ["**/*.ts"],
  "compilerOptions": {
    "module": "ES2020",
    "lib": ["ES2020"],
    "target": "ES2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true
  }
}
